<UserControl x:Class="MoustakbalManager.Pages.StatPage.StatGeoMap"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
                 xmlns:local="clr-namespace:MoustakbalManager.Pages.StatPage"
                 xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
                 mc:Ignorable="d" 
                 d:DesignHeight="300" d:DesignWidth="300" 
                 d:DataContext="{d:DesignInstance local:StatGeoMap}">
    <Grid>
        <lvc:GeoMap  Name="GeoMap" HeatMap="{Binding Values}" Source="../../Ressources/Maps/Algeria.xml"
                     Hoverable="true" Background="Transparent" DefaultLandFill="#a1edb1"
                     LandStroke="DarkSlateGray" LandStrokeThickness="0.3" AnimationsSpeed="0:0:0.3" EnableZoomingAndPanning="True"/>
        
        
        <Slider TickFrequency="10" TickPlacement="BottomRight"
                HorizontalAlignment="Right" Margin="0 20 5 20"
                Orientation="Vertical" Value="1" Minimum="1" Maximum="100" />
    </Grid>
</UserControl>
    