<UserControl x:Class="MoustakbalManager.Pages.StatPage.StatPie"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MoustakbalManager.Pages.StatPage"
             xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <lvc:PieChart Name="PieChart" LegendLocation="Bottom"  DataClick="Chart_OnDataClick" DataTooltip="{x:Null}"  
                      HoverPushOut="20" AnimationsSpeed="0:0:0.2" Series="{Binding SeriesCollection}" />
    </Grid>
</UserControl>
